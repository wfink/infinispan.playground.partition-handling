<config xmlns="urn:org:jgroups"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:org:jgroups http://www.jgroups.org/schema/jgroups-4.0.xsd">

    <TCP bind_addr="${infinispan.cache.bind_addr:127.0.0.1}"
         bind_port="${infinispan.cache.bind_port:7800}" port_range="0"
         recv_buf_size="20000000"
         send_buf_size="640000"
         bundler_type="no-bundler"
         enable_diagnostics="true"
         thread_naming_pattern="cl"

         thread_pool.min_threads="0"
         thread_pool.max_threads="8"
         thread_pool.keep_alive_time="5000"
   />
    <TCPPING async_discovery="true"
             initial_hosts="${infinispan.cache.tcpping.initial_hosts:localhost[7800],localhost[7801]}"
             port_range="0"/>
    <MERGE3 max_interval="5000"
            min_interval="1000"
            max_participants_in_merge="0"/>
    <FD_SOCK/>
    <!-- Suspect node `timeout` to `timeout + timeout_check_interval` millis after the last heartbeat -->
    <FD_ALL timeout="5000" interval="1000" timeout_check_interval="1000"/>
    <VERIFY_SUSPECT timeout="1000"  />

    <pbcast.NAKACK2 use_mcast_xmit="false"
                   discard_delivered_msgs="true" />
    <UNICAST3/>

    <pbcast.STABLE stability_delay="500"
                   desired_avg_gossip="5000"
                   max_bytes="1M"
    />
    <pbcast.GMS print_local_addr="true" join_timeout="5000"/>
    <MFC max_credits="2M"
         min_threshold="0.4"/>
    <FRAG3/>
</config>
